// Dark mode

configuration {
    modi: "run,drun,window";
    icon-theme: "Oranchelo";
    show-icons: true;
    terminal: "kitty";
    drun-display-format: "{icon} {name}";
    location: 0;
    disable-history: false;
    hide-scrollbar: true;
    display-drun: "  ";
    display-run: "  ";
    display-window: "  ";
    display-Network: " 󰤨 ";
    sidebar-mode: true;
}

* {
    bg-col:  #252628;
    bg-col-light: #252628;
    border-col: #252628;
    selected-col: #1d2021;
    fg: #a89984;
    blue: #7daea3;
    fg-col: #d4be98;
    fg-col2: #f38ba8;
    grey: #a89984;
    rad: 10px;
    text-color: @fg;
    font: "SF Pro Display Medium 15";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    location: center;
    width: 18%;
    border-radius: @rad; 
    background-color: #0000;
}

mainbox {
    spacing: 2%;
    background-color: #0000;
}

inputbar {
    children: [ entry ];
    padding: 0.8em 0 0.8em 0;
    border-radius: @rad;
    background-color: @bg-col;
    text-color: @fg;
}

prompt {
    background-color: @blue;
    padding: 6px;
    text-color: @bg-col;
    border-radius: 3px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 1.5% 3%;
    placeholder: "Search App";
    border-radius: @rad;
    background-color: @bg-col;

}

listview {
    cycle: false;
    border-radius: @rad;
    layout: vertical;
    lines: 3;
    background-color: @bg-col;

}

element {
    padding: 2% 3%;
    border-radius: @rad;
    background-color: @bg-col;

}

element-icon {
    size: 22px;
}

element selected {
    background-color: @bg-col;
    text-color: @fg-col2  ;
}

element selected, element-text selected { 
    text-color: @blue; 
}

listview, element, element-selected, element-text { cursor: pointer; }
entry { cursor: text; }

mode-switcher {
    spacing: 16;
  }

button {
    padding: 1% 0 1% 0;
    background-color: @bg-col-light;
    text-color: @grey;
    border-radius: @rad;
}

button selected {
  background-color: @bg-col;
  text-color: @fg;
}
